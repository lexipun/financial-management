<Window x:Class="FinanceManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60px" />
            <RowDefinition Height="60px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="income" Grid.Row="0" Grid.Column="1" Margin="10" Click="income_Click">
            <TextBlock Text="Income"/>
        </Button>

        <Button x:Name="Expense" Grid.Row="1" Grid.Column="1" Margin="10" Click="Expense_Click">
            <TextBlock Text="Expense"/>
        </Button>
    </Grid>
    
    
</Window>
